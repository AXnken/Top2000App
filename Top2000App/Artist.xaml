        <Button x:Name="btnZoeken" Content="Zoeken" HorizontalAlignment="Left" Margin="256,55,0,0" VerticalAlignment="Top" Width="80" Height="23" Click="btnZoeken_Click"/>
        <Label x:Name="label" Content="Naam:" HorizontalAlignment="Left" Margin="0,29,0,0" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>
